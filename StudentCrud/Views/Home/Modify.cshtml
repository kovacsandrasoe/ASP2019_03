@model StudentCrud.Models.Student


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Modify</title>
</head>
<body>

<h4>@ViewData["headertext"]</h4>
<hr />

<div>
    @Html.ValidationSummary()
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Modify" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <!--HTML helper bemutatása-->
                @Html.LabelFor(t => t.Name)
                @Html.EditorFor(t => t.Name)
                @Html.ValidationMessageFor(t => t.Name)
            </div>
            <div class="form-group">
                <label asp-for="NeptunCode" class="control-label">Neptun Code</label>
                <input asp-for="NeptunCode" class="form-control" name="NeptunCode" value="@Model.NeptunCode" />
                <span asp-validation-for="NeptunCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Class" class="control-label">Class</label>
                <input asp-for="Class" class="form-control" name="Class" value="@Model.Class" />
                <span asp-validation-for="Class" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Faculty" class="control-label">Faculty</label>
                <input asp-for="Faculty" class="form-control" name="Faculty" value="@Model.Faculty" />
                <span asp-validation-for="Faculty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" name="UID" value="@Model.UID" />
                <input type="hidden" name="ContentType" value="@Model.ContentType" />
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
